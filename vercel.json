{
    "version": 2,
    "builds": [
        {
            "src": "api/*/index.py",
            "use": "@vercel/python",
            "config": {
                "maxDuration": 60
            }
        },
        {
            "src": "main.py",
            "use": "@vercel/python",
            "config": {
                "maxDuration": 60
            }
        }
    ],
    "routes": [
        {
            "src": "/test-sentiment",
            "dest": "/api/test-sentiment/index.py"
        },
        {
            "src": "/market/(.*)",
            "dest": "/api/market/$1"
        },
        {
            "src": "/health",
            "dest": "/api/health/index.py"
        },
        {
            "src": "/(.*)",
            "dest": "main.py"
        }
    ]
} 